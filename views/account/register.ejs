<div class="baseView">
    <% if (title) { %>
        <h1><%= title %></h1>
        <% } else {
        res.redirect('/')
        } %>

    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    <div class="formBox" id="registerBox">
        <form action="/account/register" method="post">
            <label for="account_firstname">First Name</label><br>
            <input class="inputBox" type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>"><br>
            <label for="account_lastname">Last Name</label><br>
            <input class="inputBox" type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>"><br>
            <label for="account_email">Email</label><br>
            <input class="inputBox" type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>"><br>
            <label for="account_password">Password</label><br>
            <input class="inputBox" type="password" id="account_password" name="account_password" 
            title="Password must contain one number, one uppercase letter, one special character,
            and it must be at least 12 characters long." pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br>
            <span class="inputReq">Password must be at least 12 characters, one must be a number, one must be a lowercase letter,
                 one must be a capital letter, and one must be a non-alphanumeric character.</span>
            <div id="buttonHolder">
                <input class="formButton" type="submit" value="Register">
            </div>
        </form>
        
    </div>

</div>
