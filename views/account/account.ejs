<div id="accountView">
    <% if (title) { %>
        <h1><%= title %></h1>
        <% } else {
        res.redirect('/')
        } %>
    <p>You're logged in - Authorization: <%= accountType%></p>

    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
      <h2>Welcome <%- accountName %></h2>
      <a href="/account/update-account">Update Account Information</a>

      <% if (accountType === "Admin" || accountType === "Employee") { %>
        <h3>Inventory Management</h3>
        <a href="/inv">Manage Inventory</a>
      <% } %>

      <% if (accountType === "Admin" ) { %>
        <h3>Account Authorization Management</h3>
        <a href="/account/update-account-types">Managage Account Types</a>
      <% } %>
        
     


</div>